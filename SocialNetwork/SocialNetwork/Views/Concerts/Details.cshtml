@model SocialNetwork.ViewModels.ConcertDetailsViewModel
@{
	ViewBag.Title = "Details";
}

<h2>
	@Model.Concert.Artist.Name
	@if(User.Identity.IsAuthenticated)
	{
		if (Model.IsFollowing)
		{
			<button class="btn btn-info float-end">Following</button>
		}
		else
		{
			<button class="btn btn-outline-info float-end">Follow</button>
		}
	}

</h2>
<p>
	Performing at @Model.Concert.Venue on @Model.Concert.DateTime.ToString("d MMM") at @Model.Concert.DateTime.ToString("HH:mm")
</p>
@if(User.Identity.IsAuthenticated && Model.IsAttending)
{
	<p>You are going to this event.</p>
}

