@model SocialNetwork.ViewModels.ConcertsViewModel

@{
	ViewBag.Title = "Home Page";
}
<h1>@Model.Heading</h1>
@using (Html.BeginForm("Search", "Concerts"))
{
<div class="form-group">
	


	<div class="input-group">
		<div class="input-group">
			@Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", aria_describedby = "basic-addon2", placeholder="Search by artist, genre or venue..." })
			<div class="input-group-append">
				<button id="basic-addon2" class="btn btn-outline-secondary form-control search-button" type="submit"><i class="fas fa-search"></i></button>
				
			</div>
		</div>
		

	</div>

</div>
}
<ul class="concerts voffset4">
	@foreach(var concert in Model.UpcomingConcerts)
	{
	<li>
		<div class="date">
			<div class="month">
				@concert.DateTime.ToString("MMM")
			</div>
			<div class="day">
				@concert.DateTime.ToString("d ")
			</div>
		</div>
		<div class="details">
			<span class="artist">
				<a href="@Url.Action("Details","Concerts", new { id=concert.Id})">
					@concert.Artist.Name
				</a>
				

				@if (concert.IsCanceled)
				{
					<span class="form-label text-warning">Canceled</span>
				}
				@if (Model.ShowActions)
				{
					<button class="btn btn-link btn-sm js-toggle-follow" data-user-id="@concert.ArtistId">Follow?</button>
				}
			</span>
			<span class="genre ">
				@concert.Genre.Name
			</span>
			@if (Model.ShowActions && !concert.IsCanceled)
			{
				<button data-concert-id="@concert.Id" class="btn btn-outline-dark btn-sm float-end js-toggle-attendance">Going?</button>
			}
			</div>
	</li>
	}
</ul>

@section scripts{
	
	<script>
		$(document).ready(function () {

			//attendances toggle
			$(".js-toggle-attendance").click(function (e) {
				var button = $(e.target);
				$.post("api/attendances", { concertId:button.attr("data-concert-id") })
					.done(function () {

						button
							.removeClass("btn-outline-dark")
							.addClass("btn-info")
							.text("Going")

					})
					.fail(function () {
						alert("You are already going to this event.");
					})

			})

			//following toggle
			$(".js-toggle-follow").click(function (e) {
				var button = $(e.target);
				$.post("/api/followings", { followeeId:button.attr("data-user-id") })
					.done(function () {

						button.text("following")

					})
					.fail(function () {
						alert("You are already following this artist.");
					})

			})
		});
	</script>
}

